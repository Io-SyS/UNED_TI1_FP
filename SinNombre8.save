===================================================*/

bool Simetrico( const TipoCadena Texto ){
  int i, j;
  
  /*-- 1º: Buscar el punto final --*/
  j = 0;
  while ((Texto[j] !=Fin) && (j<Maximo)){
    j++;
  }
  j--;
  /*-- 2º: Comprobar igualdad entre simétricos --*/
  i = 0;
  while ((i < j) && (Texto[i] == Texto[j])) {
    i++;
    j--;
  }
  /*-- 3º: Es palíndromo si coincide todo --*/
  return i>=j;
}

